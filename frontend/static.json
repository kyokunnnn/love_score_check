{
  "redirects": [
    {
      "source": "/api/*",
      "destination": "https://love-score-check.onrender.com/api/:splat",
      "status": 200
    },
    { "source": "/**", "destination": "/index.html", "status": 200 }
  ],
  "headers": [
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
